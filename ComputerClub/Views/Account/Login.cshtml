@using ComputerClub.ViewModels
@model LoginViewModel;

@{

}

<form method="post" asp-action="Login" enctype="multipart/form-data" class="form">
    <div class="form-group">
        <label for="Email">Your Email</label>
        <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Enter your email"required>
        <div class="invalid-feedback">Email is required</div>
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your password" required>
        <div class="invalid-feedback">Password is required</div>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
