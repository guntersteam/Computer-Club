@using ComputerClub.ViewModels
@model UserViewModel

@{
    ViewData["Title"] = "Add User";
}

<form method ="post" asp-action="InsertInto">
    <div class="form-group">
        <label >FirstName</label>
        <input asp-for="FirstName" class="form-control" id="exampleInputPassword1" placeholder="Enter First Name" required>
    </div>
      <div class="form-group">
        <label >LastName</label>
        <input asp-for="LastName"  class="form-control" id="exampleInputPassword1" placeholder="Enter Last Name" required>
    </div>
    <div class="form-group">
        <label>Login</label>
        <input asp-for="Login"  class="form-control" id="exampleInputPassword1" placeholder="Enter Login" required>
    </div>
    <div class="form-group">
        <label>Email address</label>
        <input asp-for="Email"  type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Email" required>
    </div>
    <div class="form-group">
        <label >Password</label>
        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter Password" required>
    </div>
    <div class="form-group">
        <label >PhoneNumber</label>
        <input asp-for="PhoneNumber" class="form-control"placeholder="Enter Phone Number" required>
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>